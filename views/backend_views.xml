<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tournament Category -->
    <record id="view_tournament_category_tree" model="ir.ui.view">
        <field name="name">tournament.category.tree</field>
        <field name="model">tournament.category</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>
    <record id="view_tournament_category_form" model="ir.ui.view">
        <field name="name">tournament.category.form</field>
        <field name="model">tournament.category</field>
        <field name="arch" type="xml">
            <form>
                <field name="name"/>
            </form>
        </field>
    </record>
    <menuitem id="tournament_manager_root_menu" name="Tournament Manager" sequence="10"/>
    <record id="action_tournament_category" model="ir.actions.act_window">
        <field name="name">Categories</field>
        <field name="res_model">tournament.category</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem id="tournament_category_menu" name="Categories"
              parent="tournament_manager_root_menu"
              action="action_tournament_category"/>

    <!-- Repeat the above pattern for clubs, teams, etc. -->

    <!-- Club -->
    <record id="view_tournament_club_tree" model="ir.ui.view">
        <field name="name">tournament.club.tree</field>
        <field name="model">tournament.club</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="location"/>
            </list>
        </field>
    </record>
    <record id="view_tournament_club_form" model="ir.ui.view">
        <field name="name">tournament.club.form</field>
        <field name="model">tournament.club</field>
        <field name="arch" type="xml">
            <form>
                <field name="name"/>
                <field name="location"/>
            </form>
        </field>
    </record>
    <record id="action_tournament_club" model="ir.actions.act_window">
        <field name="name">Clubs</field>
        <field name="res_model">tournament.club</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem id="tournament_club_menu" name="Clubs"
              parent="tournament_manager_root_menu"
              action="action_tournament_club"/>
            
    <!-- Tournament -->
    <record id="view_tournament_tree" model="ir.ui.view">
        <field name="name">tournament.tree</field>
        <field name="model">tournament.tournament</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="category_id"/>
            </list>
        </field>
    </record>
    <record id="view_tournament_form" model="ir.ui.view">
        <field name="name">tournament.form</field>
        <field name="model">tournament.tournament</field>
        <field name="arch" type="xml">
            <form>
                <field name="name"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="category_id"/>
            </form>
        </field>
    </record>
    <record id="action_tournament" model="ir.actions.act_window">
        <field name="name">Tournaments</field>
        <field name="res_model">tournament.tournament</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem id="tournament_menu" name="Tournaments"
              parent="tournament_manager_root_menu"
              action="action_tournament"/>

    <!-- Example: Tournament Team -->
    <record id="view_tournament_team_tree" model="ir.ui.view">
        <field name="name">tournament.team.tree</field>
        <field name="model">tournament.team</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="club_id"/>
                <field name="category_id"/>
                <field name="manager_user_id"/>
            </list>
        </field>
    </record>
    <record id="view_tournament_team_form" model="ir.ui.view">
        <field name="name">tournament.team.form</field>
        <field name="model">tournament.team</field>
        <field name="arch" type="xml">
            <form>
                <field name="name"/>
                <field name="club_id"/>
                <field name="category_id"/>
                <field name="manager_user_id"/>
            </form>
        </field>
    </record>
    <record id="action_tournament_team" model="ir.actions.act_window">
        <field name="name">Teams</field>
        <field name="res_model">tournament.team</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem id="tournament_team_menu" name="Teams"
              parent="tournament_manager_root_menu"
              action="action_tournament_team"/>
</odoo>
