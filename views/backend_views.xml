    </record>
    <record id="action_tournament_team_manager" model="ir.actions.act_window">
        <field name="name">Team Managers</field>
        <field name="res_model">tournament.team.manager</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem id="tournament_team_manager_menu" name="Team Managers"
