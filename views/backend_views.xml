<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tournament Category -->
    <record id="view_tournament_category_tree" model="ir.ui.view">
        <field name="name">tournament.category.tree</field>
        <field name="model">tournament.category</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>
    <record id="view_tournament_category_form" model="ir.ui.view">
        <field name="name">tournament.category.form</field>
        <field name="model">tournament.category</field>
        <field name="arch" type="xml">
            <form>
                <field name="name"/>
            </form>
        </field>
    </record>
    <menuitem id="tournament_manager_root_menu" name="Tournament Manager" sequence="10"/>
    <record id="action_tournament_category" model="ir.actions.act_window">
        <field name="name">Categories</field>
        <field name="res_model">tournament.category</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem id="tournament_category_menu" name="Categories"
              parent="tournament_manager_root_menu"
              action="action_tournament_category"/>

    <!-- Repeat the above pattern for clubs, teams, etc. -->

    <!-- Club -->
    <record id="view_tournament_club_tree" model="ir.ui.view">
        <field name="name">tournament.club.tree</field>
        <field name="model">tournament.club</field>
        <field name="arch" type="xml">
